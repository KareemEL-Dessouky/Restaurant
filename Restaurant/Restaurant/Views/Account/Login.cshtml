@model Restaurant.ViewModels.Login.UserLogin

@{
    ViewData["Title"] = "Login";
}



<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2 style="color:white"> 
                <strong style="color:darkgoldenrod">Login</strong>
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <input type="text"
                                   asp-for="UserName"
                                   class="form-control"
                                   placeholder="Name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>
                        <div>
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label text-light">
                                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>
                        <div class="btn_box">
                            <button style="background-color:teal">Login</button>
                            <a asp-action="CustomerRegister" class="text-primary" style="margin-left:0.7em;">Create new account</a>

                        </div><br />
                    </form>
                </div>
            </div>
        </div>
    </div>


</section>







<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
