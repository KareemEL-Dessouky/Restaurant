@model Restaurant.ViewModels.Role.RoleViewModel

@{
    ViewData["Title"] = "Create";
}

<style>
    .container-cat {
        width: 60%;
        margin: 15em auto;
        background-color: rgba(0, 0, 0, 0.5);
        flex-basis: 25%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
        color: #fff;
    }
</style>


<div class="container-cat p-5">
    <h2 style="margin-bottom:1em;">Admin Roles</h2>

    <form asp-action="Create">
        <div class="form-group">
            <input asp-for="RoleName" class="form-control" placeholder="What a Role?" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group mt-5">
            <button type="submit" class="btn btn-success" style="margin-right:3em;">Add Role</button>
            <a asp-action="Index" asp-controller="Products" class="btn btn-dark">Back to Products</a>
        </div>
    </form>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
