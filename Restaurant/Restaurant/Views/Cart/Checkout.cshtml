@using Restaurant.ViewModels.CartViewModel;
@model CartItemViewModel

@{
    ViewData["Title"] = "Checkout Success!";
}

<style>
  

    h1 {
        margin-top: 4rem;
        padding-left: 2rem;
        color: white;
    }

    h2 {
        margin-top: 1rem;
        padding-left: 2rem;
        color: green;
        font-weight: 700;
    }

    .checkout-container {
        color: white;
        margin-left: 4rem;
        margin-top: 3rem;
        background-color: rgba(0, 0, 0, 0.5);
        flex-basis: 25%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 55%;
        padding: 2rem;
    }

    thead, tr {
        color: white;
    }

</style>

    <h1>@ViewData["Title"]</h1>
    <hr />

<div class="checkout-container">
    <div class="row">
        <div class="col-md-12">
            <h2>Your Cart Items</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Title</td>
                        <td>@Model.Quantity</td>
                        <td>@Model.Price.ToString("C")</td>
                        <td>@Model.ItemsTotalPrice.ToString("C")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<h2>Happy Purchase!</h2>


