@using Restaurant.ViewModels.ProductViewModel;

@model List<HomeProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container-for-products {
        display: grid;
        text-align: center;
        grid-template-columns: auto auto auto auto;
        gap: 10px;
        padding-left: 50px;
        padding-right: 50px;
    }
    h1{
        color:white
    }

    .add-cart{
        justify-content:space-around;
        align-items:center;
    }

    .add-cart i:hover{
            color: #ffbe33
    }
</style>
<h1 class="text-center">All Products</h1>

<div class="container-for-products">
    @foreach (var product in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="/images/burger056.jpg" class="card-img-top">
            <div class="card-body">
                <h2 class="card-title">@product.Title</h2>
                @*<h3 class="card-text">@product.Quantity</h3>

                <a asp-controller="cart" class="btn btn-success">+</a>
                <a asp-controller="cart" class="btn btn-danger">-</a>*@

                @*<h3 class="card-text">ID: @Model.ID</h3>
            <h3 class="card-text">Address: @Model.Address</h3>*@
            </div>
            <div class="d-flex add-cart">
                <h3 class="card-text">@product.Price.ToString("c2")</h3>


                <form method="post" asp-controller="cart" asp-action="AddToCart" asp-route-id="@product.ID">
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" min="1" max="3" value="1">
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-cart-shopping fa-xl"></i>Add to Cart</button>
                </form>
            </div>
               
        </div>
    }
                    
</div>

